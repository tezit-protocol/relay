# Server
PORT=3002
NODE_ENV=development

# Database
DATABASE_URL=file:./tezit-relay.db

# Auth (pluggable — bring your own JWT secret)
# CRITICAL: Must be set to a secure value in production (fatal error if default)
JWT_SECRET=change-me-in-production
JWT_ISSUER=tezit-relay

# Relay identity (used for tez addresses: userId@RELAY_HOST)
RELAY_HOST=localhost

# CORS — comma-separated allowed origins (required in production)
# CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Limits
MAX_TEZ_SIZE_BYTES=1048576
MAX_CONTEXT_ITEMS=50
MAX_RECIPIENTS=100

# Federation (server-to-server Tez delivery)
FEDERATION_ENABLED=false
FEDERATION_MODE=allowlist          # allowlist | open
DATA_DIR=./data                    # Where server keys are stored
ADMIN_USER_IDS=                    # Comma-separated user IDs with admin access

# Backup encryption (set a 32+ char random string for Litestream backup encryption)
# LITESTREAM_ENCRYPTION_KEY=
